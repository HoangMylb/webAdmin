      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>Số thứ tự</th>
                      <th>ID_User</th>
                      <th>ID_Phim</th>
                      <th>ID_Rạp phim</th>
                      <th>Ngày đặt vé</th>
                      <th>Xuất chiếu</th>
                      <th>Ghế</th>
                      <th>Số lượng vé</th>
                      <th>Chi phí</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each dh}}
                    <tr>
                      <td  style="max-width: 30px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;text-align: center;">{{indexPlusOne}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{user}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{phim}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{rapPhim}}</td>
                      <td>{{ngayDat}}</td>
                      <td>{{xuatChieu}}</td>
                      <td>{{ghe}}</td>
                      <td>{{soLuong}}</td>
                      <td>{{tien}}</td>

                    </tr>
                    {{/each }}

                </table>

              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
