  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Phim</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                    <tr>
                      {{!-- tenPhim,theLoaiPhim, trailer, poster, thoiLuongPhim, noiDungPhim, icon, dienVien, rapPhim
                      --}}
                      <th style="width: 50px;">STT</th>
                      <th style="width: 90px;">Tên phim</th>
                      <th style="width: 90px;">Thể loại phim</th>
                      <th style="width: 90px;">Trailer Phim</th>
                      <th style="width: 90px;">Poster Phim</th>
                      <th style="width: 90px;">Thời Lượng Phim</th>
                      <th style="width: 90px;">Nội Dung Phim</th>
                      <th style="width: 90px;">Icon</th>
                      <th style="width: 90px;">Diễn Viên</th>
                      <th style="width: 90px;">Rạp Phim</th>
                      <th style="width: 90px;">IconStar</th>
                      <th style="width: 150px;">Trạng thái</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each p}}
                    
                    <tr>
                      <td  style="text-align: center;">{{indexPlusOne}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{tenPhim}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{theLoaiPhim}}</td>
                      <td>
                        <video width="80" height="80" controls>
                          <source src="{{trailer}}" type="video/mp4">
                          Your browser does not support the video tag.
                        </video>
                      </td>
                      <td><img src="{{poster}}" width="50px" height="50px" alt=""></td>
                      <td>{{thoiLuongPhim}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{noiDungPhim}}</td>
                      <td><img src="{{icon}}" width="50px" height="50px" alt=""></td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{dienVien}}</td>
                      <td  style="max-width: 50px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{rapPhim}}</td>
                      <td><img src="{{iconStart}}" width="50px" height="50px" alt=""></td>
                      <td >{{trangThai}}</td>
                      <td>
                        <button onclick="goUpdate('{{_id}}');" class="btn btn-primary btn-block" style="width: 60px;">Sửa</button>
                      </td>
                      <td>
                        <a href="#" onclick="fDel('{{_id}}');" class="btn btn-block btn-danger" style="width: 60px;">
                          <i class="#"></i> Xóa
                        </a>
                      </td>

                    </tr>
                    {{/each }}

                </table>

              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
  </div>
  </div>
  <!-- ./wrapper -->


  <!-- Page specific script -->
  <script>


    const fDel = (id) => {
      if (confirm("Bạn có muốn xóa không?")) {
        location.href = `/phim/${id}/del`;
      }

    }
    const goNew = () => {
      window.location.href = `/phim/newPhim`;
    }
    const goUpdate = (id) => {
      location.href = `/phim/${id}/edit`;
    }
  </script>
</body>


</html>