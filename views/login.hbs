<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Log in</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
</head>

<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <a href="#"><b>Đăng nhập</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
      <div class="card-body login-card-body">

        <form action="/rapphim">
          <div class="input-group mb-3">
            <input type="email" id="userName" name="userName" class="form-control" placeholder="Email">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <input type="password" id="passWord" name="passWord" class="form-control" placeholder="Password">
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <button type="submit" onclick="check();" class="btn btn-primary btn-block" value="Edit">Đăng nhập</button>
        </form>


        <!-- /.social-auth-links -->
      </div>
      <!-- /.login-card-body -->
    </div>
  </div>
  <!-- /.login-box -->

  <!-- jQuery -->
  <script>

    function check() {
      let userName = document.getElementById("userName").value;
      let passWord = document.getElementById("passWord").value;
      if (userName.length === 0 || passWord.length === 0) {
        alert("Không để trống Username hoặc Password")
        return false
      } else {

        if (userName === "abcd1@gmail.com" && passWord === "abcd123") {

          alert("Đăng nhập thành công")
          window.location.href = `/rapphim`;
          return true
          
        } else {
          alert("Sai Username hoặc Password")
          return false
        }
      }
    }

  </script>
</body>

</html>